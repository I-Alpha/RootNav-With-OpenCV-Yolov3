<Window x:Class="RootNav.ExceptionHandlerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exception Window" Height="384" Width="687">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Name="headerBox" FontWeight="Bold" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <TextBox Grid.Row="1" Name="mainBox" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
