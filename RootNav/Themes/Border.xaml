<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<LinearGradientBrush x:Key="BackgroundBrush" EndPoint="0,1" StartPoint="0,0">
		<GradientStop Color="#222222" Offset="0"/>
		<GradientStop Color="#444444" Offset="1"/>
	</LinearGradientBrush>

    <Style x:Key="RoundedBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#777"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="2,2,2,2"/>
    </Style>
</ResourceDictionary>